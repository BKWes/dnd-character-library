{{!-- {{> character-editor}} --}}

{{#if characters.length}}
<section>
  <h2>Your Characters</h2>
  <dl>
    {{#each characters as |character|}}
    <dd>
      {{> full-character-info character}}
      <a href="/dashboard/edit/{{character.id}}" class="edit-link">Edit Character</a>
    </dd>
    {{/each}}
  </dl>
</section>
{{/if}}

<div class="container">
  <div class="row">
    <a class="d-flex justify-content-center" href="/dashboard/new_character"><button>New Character</button></a>
  </div>
</div>
