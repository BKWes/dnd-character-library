    <div class="container">
        <form class="row justify-content-md-center form-inline my-3">
            <div class="col-3 form-group">
                <label for="characterName">Name:</label>
                <input type="text" id="characterName"/>
            </div>
            <div class="col-3 form-group">
                <label for="characterClass">Class:</label>
                <input type="text" id="characterClass"/>
            </div>
            <div class="col-3 form-group">
                <label for="characterRace">Race:</label>
                <input type="text" id="characterRace"/>
            </div>
        </form>
    </div>
    <div class="container">
        <form class="row justify-content-around form-inline">
            <div class="col-sm-2 my-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">STR</div>
                    </div>
                    <input type="text" class="form-control" id="characterSTR" placeholder="10">
                    <div class="input-group-append">
                        <div class="input-group-text">+0</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 my-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">DEX</div>
                    </div>
                    <input type="text" class="form-control" id="characterDEX" placeholder="10">
                    <div class="input-group-append">
                        <div class="input-group-text">+0</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 my-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">CON</div>
                    </div>
                    <input type="text" class="form-control" id="characterCON" placeholder="10">
                    <div class="input-group-append">
                        <div class="input-group-text">+0</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 my-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">INT</div>
                    </div>
                    <input type="text" class="form-control" id="characterINT" placeholder="10">
                    <div class="input-group-append">
                        <div class="input-group-text">+0</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 my-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">WIS</div>
                    </div>
                    <input type="text" class="form-control" id="characterWIS" placeholder="10">
                    <div class="input-group-append">
                        <div class="input-group-text">+0</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 my-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">CHA</div>
                    </div>
                    <input type="text" class="form-control" id="characterCHA" placeholder="10">
                    <div class="input-group-append">
                        <div class="input-group-text">+0</div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="container">
        <div class="row justify-content-around">
            <input class="col-sm-2 my-1 btn btn-primary" type="button" value="Save Character">
            <input class="col-sm-2 my-1 btn btn-primary" type="button" value="Delete Character">
            <input class="col-sm-2 my-1 btn btn-primary" type="button" value="Reset Character">
        </div>
    </div>
</div>






